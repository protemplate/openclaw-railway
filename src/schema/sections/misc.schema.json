{
  "$id": "misc",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Miscellaneous Configuration",
  "description": "Schema for top-level keys that don't fit other sections: meta, env, logging, diagnostics, ui, browser",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "description": "Metadata about the configuration",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" }
      },
      "additionalProperties": true
    },
    "env": {
      "type": "object",
      "description": "Environment variable overrides",
      "additionalProperties": { "type": "string" }
    },
    "logging": {
      "type": "object",
      "description": "Logging configuration",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"]
        }
      },
      "additionalProperties": true
    },
    "diagnostics": {
      "type": "object",
      "description": "Diagnostic and debugging settings",
      "additionalProperties": true
    },
    "ui": {
      "type": "object",
      "description": "UI customization",
      "additionalProperties": true
    },
    "browser": {
      "type": "object",
      "description": "Browser automation settings",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
