{
  "$id": "models",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Models Configuration",
  "description": "Custom model provider definitions",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "description": "Provider backend (openai-compatible, anthropic, etc.)"
        },
        "baseUrl": {
          "type": "string",
          "description": "API base URL",
          "format": "uri"
        },
        "apiKey": {
          "type": "string",
          "description": "API key for this model provider"
        },
        "models": {
          "type": "array",
          "description": "Available model identifiers",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
