{
  "$id": "skills",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skills Configuration",
  "description": "Bundled and installed skill packs",
  "type": "object",
  "properties": {
    "entries": {
      "type": "object",
      "description": "Skill entries keyed by slug",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "directory": {
      "type": "string",
      "description": "Custom skills directory path"
    }
  },
  "additionalProperties": true
}
