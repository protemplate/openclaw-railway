{
  "$id": "memory",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Memory Configuration",
  "description": "Agent memory backend settings",
  "type": "object",
  "properties": {
    "backend": {
      "type": "string",
      "description": "Memory backend type",
      "enum": ["builtin", "qdrant"]
    },
    "qdrant": {
      "type": "object",
      "description": "Qdrant vector database settings",
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "apiKey": { "type": "string" },
        "collection": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
