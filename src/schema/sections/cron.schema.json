{
  "$id": "cron",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cron Configuration",
  "description": "Scheduled job definitions",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "properties": {
        "schedule": {
          "type": "string",
          "description": "Cron expression (e.g. '0 9 * * *')"
        },
        "action": {
          "type": "string",
          "description": "Action to execute"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
